# SmartLamppost v5.0 - Environment Variables
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database (SQLite - path relative to backend folder)
DATABASE_PATH=data/smartlamppost.db

# CORS - Frontend URL (comma-separated for multiple)
CORS_ORIGINS=https://your-frontend.vercel.app,https://your-frontend.netlify.app

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=86400

# Optional: Weather API
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# Optional: Email (SMTP)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
